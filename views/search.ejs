<head>
    <title>Let's Start Yoga</title>
</head>
<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <form action="/result" method="post">
                <div class="form-group text-center">
                    <label for="code">Search by Pose Name</label>
                    <select id="designation" name="code" class="form-control mt-3 text-center">
                        <option selected disabled>Pose name</option>
                        <% poses.forEach(pose=> { %>
                            <option value="<%= pose.poseCode %>">
                                <%= pose.fullName %>
                            </option>
                            <% }) %>
                    </select>
                </div>
                <div class="text-center">
                    <button for="code" type="submit" class="btn btn-primary mt-2">Search by Pose Name</button>
                </div>
            </form>
        </div>


        <div class="col-md-6">
            <form action="/result" method="post">
                <div class="form-group text-center">
                    <label for="designation">Search by Category</label>
                    <select id="designation" name="designation" class="form-control mt-3 text-center">
                        <option selected disabled>Categories</option>
                        <% categories.forEach(category=> { %>
                            <% if(category !=="" ) { %>
                                <option value="<%= category %>">
                                    <%= category %>
                                </option>
                                <% } %>
                                    <% }) %>
                    </select>
                </div>
                <div class="text-center">
                    <button for="designation" type="submit" class="btn btn-primary mt-2">Search by Category</button>
                </div>
            </form>
        </div>
    </div>
</div>